<script>
async function safeApprove(tokenAddress, spender, amount) {
  if (!ALLOWED_CONTRACTS.includes(spender.toLowerCase())) {
    alert("ğŸš¨ Approval to unknown contract blocked!");
    return;
  }

  if (amount === ethers.MaxUint256) {
    alert("âŒ Unlimited approvals are blocked!");
    return;
  }

  const abi = [
    "function approve(address spender, uint256 amount) returns (bool)"
  ];

  const token = new ethers.Contract(tokenAddress, abi, signer);
  await token.approve(spender, amount);
}
</script>
